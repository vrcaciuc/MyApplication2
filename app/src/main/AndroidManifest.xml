<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.edu.myapplication2.app" >
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ua.edu.myapplication2.app.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ua.edu.myapplication2.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ua.edu.myapplication2.app.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ua.edu.myapplication2.app.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ua.edu.myapplication2.app.Menu" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ua.edu.myapplication2.app.TextPlay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ua.edu.myapplication2.app.Email"
            android:label="@string/app_name" >
        </activity>
        <activity
        android:name=".Camera"
        android:screenOrientation="portrait"
        android:label="Camera Application" >
        </activity>
        <activity
            android:name=".OpenedClass"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Data"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AboutUs"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ua.edu.myapplication2.app.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Prefs"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ua.edu.myapplication2.app.PREFS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
